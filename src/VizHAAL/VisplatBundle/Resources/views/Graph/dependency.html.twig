{% extends 'VizHAALVisplatBundle::layout.html.twig' %}
{% block graph %}
    {% if is_granted('ROLE_ADMIN') %}
        <!-- Chord Diagram -->
        <script src="{{ asset('bundles/vizhaalvisplat/js/chord-diagram.js') }}"></script>
        <div class="col-lg-12 col-md-12 col-sm-12" style="height:100%;">
            <div class="col-lg-4 col-lg-push-7 col-md-4 col-sm-push-7 col-sm-4  col-xs-12" id="legend">
                <h2 class="head-legend">Dependency of Events</h2>
                <hr>
                <p class="p-legend">This chord diagram represents the relationship between activities of the
                    patient.</p>
            </div>
            <div class="col-lg-7 col-lg-pull-4 col-md-7 col-sm-pull-4 col-sm-7 col-xs-12" id="chordDiagram"></div>
        </div>
        <script>createChordDiagram({{ events|json_encode | raw }}, {{ matrix |json_encode| raw }});</script>
        <!-- Gantt Chart -->
        <script src="{{ asset('bundles/vizhaalvisplat/js/ganttchart.js') }}"></script>
        <div class="col-lg-12 col-md-12 col-sm-12"
             style="height:100%; width:100%; border: 1px solid transparent; background-color: #f8f8f8;border-color: #e7e7e7; ">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12" id="legend">
                <h2 class="head-legend">Gantt Chart</h2>
                <hr>
                <p class="p-legend">This Gantt chart shows the use of time by your patient. You can see the frequencies
                    and
                    times of days for the different activities performed.</p>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12" id="ganttchart"></div>
        </div>
        <script>createGanttChart({{ jsonDataGanttChart|json_encode|raw }})</script>
    {% endif %}
{% endblock %}
